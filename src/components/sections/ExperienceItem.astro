---
import Link from '@/components/ui/Link.astro'

interface Props {
  title: string
  company: string
  descriptionItems: string[]
  link?: string
  date: string
}

const { title, company, descriptionItems, link, date } = Astro.props
---

<div
  class='relative ml-6 mr-3 md:mx-12 pb-6 md:pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[""]]'
>
  <div class='relative pb-4 md:col-span-2'>
    <div class='sticky top-0'>
      <span class='text-yellow-400 dark:text-purple-600 -left-[42px] absolute rounded-full text-5xl'>
        &bull;
      </span>

      <h3 class='text-lg md:text-xl font-bold text-yellow-500 dark:text-purple-600'>{title}</h3>
      <h4 class='font-semibold text-lg md:text-xl text-gray-600 dark:text-white'>{company}</h4>
      <time class='p-0 m-0 text-xs md:text-sm text-gray-600/80 dark:text-white/80'>{date}</time>
    </div>
  </div>

  <div class='relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3'>
    <ul class='list-disc pl-6 flex flex-col gap-2'>
      {descriptionItems.map((item) => (
        <li>
          {item}
        </li>
      ))}
    </ul>
    
    {link && (
      <Link href={link}>
        Saber m√°s{' '}
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          stroke-width='2'
          stroke='currentColor'
          fill='none'
          stroke-linecap='round'
          stroke-linejoin='round'
        >
          <>
            <path stroke='none' d='M0 0h24v24H0z' fill='none' />
            <path d='M9 6l6 6l-6 6' />
          </>
        </svg>
      </Link>
    )}
  </div>
</div>
